public class main
{
    static int x = 31;
    static int numsum = 0;
    static int runcount = 0;

    public static void main (String[] args)
    {

        for ( ; x >= 0; x-= 2) //loop will autorun because no initialization condition
        {
            runcount += 1;
            numsum += x;
            System.out.println("Odd number (" + (runcount) + ") is: (" + x + ")");
        }
        System.out.println("The sum of your numbers is: (" + numsum + ")");
    }
}
